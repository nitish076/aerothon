<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/naval_rl"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="@color/blueback" />

            <TextView
                android:id="@+id/naval_news_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="This is headline" />

            <TextView
                android:id="@+id/naval_news_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/naval_news_head"
                android:layout_alignParentRight="true"
                android:text="This is news Content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/aero_rl"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/naval_rl">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@color/blueback" />

            <TextView
                android:id="@+id/aero_news_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="This is headline" />

            <TextView
                android:id="@+id/aero_news_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aero_news_head"
                android:layout_alignParentLeft="true"
                android:text="This is news Content" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rail_rl"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/aero_rl">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="@color/blueback" />

            <TextView
                android:id="@+id/rail_news_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="This is headline" />

            <TextView
                android:id="@+id/rail_news_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rail_news_head"
                android:layout_alignParentRight="true"
                android:text="This is news Content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/road_rl"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rail_rl">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@color/blueback" />

            <TextView
                android:id="@+id/road_news_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="This is headline" />

            <TextView
                android:id="@+id/road_news_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/road_news_head"
                android:layout_alignParentLeft="true"
                android:text="This is news Content" />
        </RelativeLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>